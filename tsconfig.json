{
  "compilerOptions": {
      "target": "es2017",                                  
      "module": "commonjs",                             "rootDir": "./",
      "baseUrl": "./src",
      "typeRoots": [
        "./src/@types"
      ],                       
      "esModuleInterop": true,                            
      "strict": false,                                     
      "strictPropertyInitialization": false,     
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,                   
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,           
      "resolveJsonModule": true
                            
  }
}
