{
  "compilerOptions": {
      "target": "es2017",                                  
      "module": "commonjs", 
      "rootDir": "./",
      "baseUrl": "./src",
      "outDir": "./dist",
      "paths": {
          "@modules/*": ["modules/*"],
          "@shared/*": ["shared/*"],
          "@errors/*": ["errors/*"],

      },
      
      "esModuleInterop": true,                            
      "strict": false,                                     
      "strictPropertyInitialization": false,     
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,                   
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,           
      "resolveJsonModule": true
                            
  }
}
